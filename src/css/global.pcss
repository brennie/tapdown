html {
  box-sizing: border-box;
}

*,
*::before,
*::after {
  box-sizing: inherit;
}

html,
body,
:global(.content) {
  height: 100%;
  width: 100%;
}

body {
  font-family: 'Helvetica Neue', Helvetica, Arial, sans;
}

a {
  color: #000;
  text-decoration: none;
}

@media screen and (orientation: landscape) {
  body {
    font-size: 4vw;
  }
}

@media screen and (orientation: portrait) {
  body {
    font-size: 4vh;
  }
}
